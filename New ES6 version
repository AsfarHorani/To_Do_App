}

// Delete const //
const Delete= (e) => {
    e.parentNode.remove();
}

// Deleteall function //
const Deleteall= ()=> {
    lis.innerHTML = " ";
}

// Edit function//
const edit = (a)=> {
    let val = prompt("Enter edit value", a.parentNode.firstChild.nodeValue);
    let val2 = prompt("Enter edit time");
    a.parentNode.firstChild.nodeValue = val;
    a.parentNode.childNodes[2].nodeValue = val2;
}

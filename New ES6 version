// Template Today //

const todoitem = document.getElementById('to-do-item');
const todotime = document.getElementById('to-do-time');
const lis = document.getElementById('list');
let i = 0;


// array of colors//
const colors = ["#dd3e54", "#41295a", "#004e92", "#0b8793"]

const additem= () => {
    
    if (todoitem.value == "" || todotime.value == "") {
        alert("Please Fill INPUT SECTTIONS carefully");
    } else {
        // list creator//
        

        const markup =`
                        <li style="background-color: ${colors[i]};" ">
                            ${todoitem.value} at ${todotime.value}
                            <img src="images/deleteicon.png" class="btn" id="close" onclick="Delete(this)">
                            <img src="images/editicon.png" class="ebtn" id="eclose" onclick="edit(this)">
                        </li>`;
        
                    lis.insertAdjacentHTML("afterbegin", markup);
                    clear();
                    // li.style.backgroundColor = colors[i];

                    i++;
                    if (i == 4) i = 0;
                    


        // var li = document.createElement('li');
